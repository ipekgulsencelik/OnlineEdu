@model UpdateBlogDTO 

@{
    ViewData["Title"] = "Blog Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BlogID" />
    <input type="hidden" asp-for="ImageUrl" />
    <label>Blog Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Görsel</label>
    <br />
    <img src="~/images/blogs/@Model.ImageUrl" width="90" />
    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" disabled />
    <br />
    <input type="file" name="image" />
    <br />
    <br />
    <label>Blog Kategorisi</label>
    <select asp-items="@ViewBag.categories" asp-for="BlogCategoryID" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <label>Blog İçeriği</label>
    <textarea type="text" asp-for="Content" class="form-control" rows="5"></textarea>
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>