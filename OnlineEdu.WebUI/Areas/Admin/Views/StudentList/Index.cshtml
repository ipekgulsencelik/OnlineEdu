@model List<AppUser>

@{
    ViewData["Title"] = "Öğrenciler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

@if (Model.Count() > 0)
{
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    <button onclick="deleteStudent(@item.Id)" class="btn btn-outline-danger">Sil</button>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Kayıtlı Herhangi Bir Öğrenci Bilgisi Verisi Bulunmamaktatır.</p>
}
<a asp-action="CreateStudent" asp-controller="StudentList" asp-area="Admin" class="btn btn-outline-primary">Yeni Öğrenci Ekle</a>

<script>
    function deleteStudent(id) {
        Swal.fire({
            title: "Silmek istediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Admin/StudentList/DeleteStudent/" + id;
            }
        });
    }
</script>